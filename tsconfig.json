{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ]
}